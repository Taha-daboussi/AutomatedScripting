{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"]

  },
  "include": ["./src/**/*"],  // Include all source files
  "exclude": ["node_modules"]  // Exclude node_modules to avoid conflict

}